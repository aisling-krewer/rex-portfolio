{
  "routes": [
    {
      "route": "/",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/about",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/dashboard",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/contact",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/admin/*",
      "allowedRoles": ["fixer"]
    },
    {
      "route": "/jobs/*",
      "allowedRoles": ["fixer", "verified-edgerunner", "new-edgerunner"]
    }
  ],
  "responseOverrides": {
    "401": {
      "redirect": "/login",
      "statusCode": 302
    },
    "404": {
      "rewrite": "/404.html"
    }
  },
  "navigationFallback": {
    "rewrite": "index.html",
    "exclude": ["/assets/*", "/images/*", "/*.css", "/*.js"]
  },
  "mimeTypes": {
    ".css": "text/css"
  },
  "globalHeaders": {
    "Access-Control-Allow-Origin": "*"
  }
}
